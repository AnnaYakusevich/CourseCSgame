<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu1">

    <Button
        android:id="@+id/card_game_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_game_start" />

    <Button
        android:id="@+id/card_game_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_game_settings" />

    <Button
        android:id="@+id/card_game_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_game_exit" />

</android.support.constraint.ConstraintLayout>